/* header and footer areas */
.menu {
  padding: 0;
  margin-top: 0;
}
.menu li {
  display: inline-block;
  margin-bottom: 0;
}
.page-meta, .article-meta, .menu a {
  padding: 5px;
}
.menu a {
  color: inherit;
}
.article-meta, footer { text-align: center; }
.title {
  font-size: 1.1em;
  line-height: 1.1em;
}
footer a { text-decoration: none; }
hr {
  border-style: dashed;
  color: #bdae93;
}

/* format homepage list of pages */
.home-index {
  list-style-type: none;
  padding-left: 5px;
}
.home-index li {
  font-size: 1.2em;
  padding: 0.2em;
  margin-bottom: 0;
}
.home-index li a {
  text-decoration: none;
}
.post-date {
  font-size: 0.75em;
  color: #665c54;
}

/* h1: gimme some space */
#post-title { margin-top: 0.5em; }
h1 { margin-top: 2em; }

/* code */
pre {
  border: 1px solid #ddd;
  box-shadow: 5px 5px 5px #eee;
  padding: 1em;
  overflow-x: auto;
  background: #282828;
  border-radius: 4px;
}
code {
  border-radius: 4px;
  background: #282828;
  color: #ebdbb2;
  font-family: monospace;
  font-size: 85%;
  padding: 0 0.4em;
}
pre code { background: none; }

/* misc elements */
img, iframe, video { max-width: 100%; }
main { hyphens: none; }
blockquote {
  background: #f9f5d7;
  border-left: 5px solid #ccc;
  padding: 3px 1em 3px;
}

li {
  margin-bottom: 0.2em;
}

table {
  margin: auto;
  border-top: 1px solid #666;
  border-bottom: 1px solid #666;
}
table thead th { border-bottom: 1px solid #ddd; }
th, td { padding: 5px; }
thead, tfoot, tr:nth-child(even) { background: #ebdbb2; }

/* fix super/subscript changing line height */
sub {
  font-size: 0.675em;
  line-height: 1.2;
  vertical-align: sub;
  vertical-align: -20%;
}

sup {
  font-size: 0.675em;
  line-height: 1.2;
  vertical-align: super;
  vertical-align: 35%;
}
